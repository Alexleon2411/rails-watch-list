<div class="m-4 navbar p-5 img-fluid" style= "background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @list.photo.key, height: 600, crop: :fill %>)">
  <div class="card-category card-large"  >
    <h1><%= link_to @list.name, lists_path, class: "text-decoration-none" %></h1>
  </div>
  <span class="movie-tag c-primary "><%= pluralize(@list.movies.size, "movie") %></span>

</div>
<div class="container mb-2">
  <div class="d-flex justify-content-between my-2">
    <span class="mb-2 d-block"><small><em class=" text-primary"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <%= link_to "add a movie", new_list_bookmark_path(@list) %>
      <%= link_to "delete this list", delete_list_path(@list), class: "btn btn-cancel text-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    </div>
  </div>
  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4">
        <div class="bg-white rounded shadow h-75">
          <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top w-100 h-75" %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= movie.title %> <span class="text-muted font-weight-normal">â€¢ <%= movie.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"><%= movie.overview %></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= bookmark.comment %></small>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
